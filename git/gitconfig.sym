[user]
	name = Nathaniel Rubin
	email = nateboop@gmail.com
[core]
	askpass = git-gui--askpass
	excludesfile = ~/.gitignore
  editor = mvim -v
	pager = diff-so-fancy | less --tabs=4 -RFX
[merge]
	tool = vimdiff
  conflictstyle = diff3
  prompt = false
[color]
	ui = auto
	status = auto
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[push]
	default = current
[commit]
    template = ~/.gitmessage
